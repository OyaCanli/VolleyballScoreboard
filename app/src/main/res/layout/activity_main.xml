<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewmodel"
            type="com.example.android.volleyballscoreboard.MainViewModel" />

        <import type="java.util.ArrayList" />

        <import type="android.databinding.ObservableMap" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_standart">

        <LinearLayout
            android:id="@+id/teamNames"
            android:layout_width="match_parent"
            android:layout_height="@dimen/team_names_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/team_on_left"
                style="@style/team_name_style"
                android:background="@{viewmodel.isSwitched ? @drawable/blueborder : @drawable/orangeborder, default = @drawable/orangeborder }"
                android:text="@{viewmodel.isSwitched ? viewmodel.mapOfBlues.teamName : viewmodel.mapOfOranges.teamName, default = @string/defaultTeamNameOnLeft}" />

            <Button
                android:id="@+id/exchange_button"
                style="@style/exchange_button_style"
                android:text="@string/ex"
                android:onClick="@{viewmodel::exchangeSides}" />

            <TextView
                android:id="@+id/team_on_right"
                style="@style/team_name_style"
                android:background="@{!viewmodel.isSwitched ? @drawable/blueborder : @drawable/orangeborder, default = @drawable/blueborder }"
                android:text="@{!viewmodel.isSwitched ? viewmodel.mapOfBlues.teamName : viewmodel.mapOfOranges.teamName, default = @string/defaultTeamNameOnRight}" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/scoreboard"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/scoreboard_height"
            android:layout_below="@id/teamNames"
            android:orientation="horizontal">

            <Button
                android:id="@+id/team_left_score"
                style="@style/score_style"
                android:text="@{!viewmodel.isSwitched ? String.valueOf(viewmodel.mapOfOranges.score) : String.valueOf(viewmodel.mapOfBlues.score)}"
                android:onClick="@{!viewmodel.isSwitched() ? viewmodel::add1pointToOranges : viewmodel::add1pointToBlues}" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_half"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/setsForTeamOnLeft"
                    style="@style/set_score_style"
                    android:text="@{!viewmodel.isSwitched ? String.valueOf(viewmodel.mapOfOranges.setsWon) : String.valueOf(viewmodel.mapOfOranges.setsWon)}" />

                <View
                    android:id="@+id/viewOrange"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@{viewmodel.isSwitched ? @color/blue_background : @color/orange_background, default = @color/orange_background }" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_half"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/setsForTeamOnRight"
                    style="@style/set_score_style"
                    android:text="@{!viewmodel.isSwitched ? String.valueOf(viewmodel.mapOfBlues.setsWon) : String.valueOf(viewmodel.mapOfOranges.setsWon)}" />

                <View
                    android:id="@+id/viewBlue"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@{!viewmodel.isSwitched ? @color/blue_background :@color/orange_background, default = @color/blue_background }" />

            </LinearLayout>

            <Button
                android:id="@+id/team_right_score"
                style="@style/score_style"
                android:text="@{!viewmodel.isSwitched ? String.valueOf(viewmodel.mapOfBlues.score) : String.valueOf(viewmodel.mapOfOranges.score)}"
                android:onClick="@{!viewmodel.isSwitched() ? viewmodel::add1pointToBlues : viewmodel::add1pointToOranges}" />

        </LinearLayout>

        <TableLayout
            android:id="@+id/summaryTable"
            style="@style/tablelayout_style">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/background_dark" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/grey">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/s1"
                    style="@style/cell_style"
                    android:text="@string/s1" />

                <TextView
                    android:id="@+id/s2"
                    style="@style/cell_style"
                    android:text="@string/s2" />

                <TextView
                    android:id="@+id/s3"
                    style="@style/cell_style"
                    android:text="@string/s3" />

                <TextView
                    android:id="@+id/s4"
                    style="@style/cell_style"
                    android:text="@string/s4" />

                <TextView
                    android:id="@+id/s5"
                    style="@style/cell_style"
                    android:text="@string/s5" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/background_dark" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/orange_background">

                <TextView
                    android:id="@+id/teamA"
                    style="@style/cell_style"
                    android:text="@string/defaultTeamNameOnLeft" />

                <TextView
                    android:id="@+id/s1_tA"
                    style="@style/cell_style"
                    android:text="@{String.valueOf(viewmodel.setScoresOrange[0]), default = 0}" />

                <TextView
                    android:id="@+id/s2_tA"
                    style="@style/cell_style"
                    android:text="@{String.valueOf(viewmodel.setScoresOrange[1]), default = 0}" />

                <TextView
                    android:id="@+id/s3_tA"
                    style="@style/cell_style"
                    android:text="@{String.valueOf(viewmodel.setScoresOrange[2]), default = 0}" />

                <TextView
                    android:id="@+id/s4_tA"
                    style="@style/cell_style"
                    android:text="@{String.valueOf(viewmodel.setScoresOrange[3]), default = 0}" />

                <TextView
                    android:id="@+id/s5_tA"
                    style="@style/cell_style"
                    android:text="@{String.valueOf(viewmodel.setScoresOrange[4]), default = 0}" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/background_dark" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blue_background">

                <TextView
                    android:id="@+id/teamB"
                    style="@style/cell_style"
                    android:text="@string/defaultTeamNameOnRight" />

                <TextView
                    android:id="@+id/s1_tB"
                    style="@style/cell_style"
                    android:text="@{String.valueOf(viewmodel.setScoresBlue[0]), default = 0}" />

                <TextView
                    android:id="@+id/s2_tB"
                    style="@style/cell_style"
                    android:text="@{String.valueOf(viewmodel.setScoresBlue[1]), default = 0}" />

                <TextView
                    android:id="@+id/s3_tB"
                    style="@style/cell_style"
                    android:text="@{String.valueOf(viewmodel.setScoresBlue[2]), default = 0}" />

                <TextView
                    android:id="@+id/s4_tB"
                    style="@style/cell_style"
                    android:text="@{String.valueOf(viewmodel.setScoresBlue[3]), default = 0}" />

                <TextView
                    android:id="@+id/s5_tB"
                    style="@style/cell_style"
                    android:text="@{String.valueOf(viewmodel.setScoresBlue[4]), default = 0}" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/background_dark" />
        </TableLayout>

        <TextView
            android:id="@+id/message"
            style="@style/message_style"
            android:layout_below="@id/summaryTable"
            android:text="@{viewmodel.message}" />

        <Button
            android:id="@+id/pauseLeft"
            style="@style/pause_style"
            android:layout_marginStart="@dimen/margin_standart"
            android:onClick="@{!viewmodel.isSwitched() ? viewmodel::pauseOrange : viewmodel::pauseBlue}" />

        <Button
            android:id="@+id/pauseRight"
            style="@style/pause_right_style"
            android:onClick="@{!viewmodel.isSwitched() ? viewmodel::pauseBlue : viewmodel::pauseOrange}" />

        <LinearLayout
            android:id="@+id/bottom_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/message">

            <Button
                android:id="@+id/undo"
                style="@style/undo_style"
                android:layout_margin="@dimen/margin_standart"
                android:layout_weight="1"
                android:enabled="@{viewmodel.undoEnabled, default = false}"
                android:text="@string/undo"
                android:onClick="@{viewmodel::undo}" />

            <android.support.v4.widget.Space
                android:layout_width="@dimen/space_width"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1" />

            <Button
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_margin="@dimen/margin_standart"
                android:layout_weight="1"
                android:background="@drawable/buttonborders"
                android:text="@string/reset" />

        </LinearLayout>

    </RelativeLayout>

</layout>